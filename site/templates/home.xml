<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<cms:svg file="site_sprite.svg"/>

			<header>
				<cms:svg file="site_sprite.svg" symbol="icon-logo1" class="logo"/>
				<a href="#form_container"><cms:text constant="start_franchise"/></a>
				<cms:svg file="site_sprite.svg" symbol="icon-arrow" class="arrow"/>
			</header>

			<!-- section abou saffron franchise -->
			<section id="about">
				<cms:module
					name="articles"
					action="show"
					text_id="about"
					/>
			</section>

			<!-- food samples gallery -->
			<section id="food_samples">
				<cms:desktop>
					<cms:module
						name="gallery"
						action="show_image_list"
						group="food_samples"
						order_by="text_id"
						template="stock/image_generic.xml"
						>
						<param name="thumbnail_size" value="220"/>
						<param name="constrain" value="Thumbnail::CONSTRAIN_WIDTH"/>
					</cms:module>
				</cms:desktop>

				<cms:mobile>
					<cms:module
						name="gallery"
						action="show_image_list"
						group="food_samples"
						order_by="text_id"
						template="stock/image_generic.xml"
						>
						<param name="thumbnail_size" value="100"/>
						<param name="constrain" value="Thumbnail::CONSTRAIN_WIDTH"/>
					</cms:module>
				</cms:mobile>
			</section>

			<section id="tendencies">
				<ul>
					<cms:module
						name="articles"
						action="show_list"
						group="tendencies"
						template="stock/features_generic.xml"
						>
						<param name="sprite" value="site_sprite.svg"/>
					</cms:module>
				</ul>
			</section>

			<!-- section about saffron plant -->
			<section id="about_saffron">
				<cms:svg file="site_sprite.svg" symbol="icon-logo2" class="logo2"/>

				<cms:module
					name="articles"
					action="show"
					text_id="about_saffron"
					/>

				<img
					src="_BASEURL.'/site/images/package.png'"
					alt="this_img_name"
					cms:eval="src"
					cms:constant="alt"
					/>
			</section>

			<footer>
				<div id="content_left">
					<cms:module
						name="articles"
						action="show"
						text_id="footer_article"
						template="stock/article_generic.xml"
						>
						<param name="title" value=""/>
					</cms:module>

					<a href="'tel:'.urlencode(Language::get_Text('phone'))"
						cms:eval="href"
						class="phone"
						>
						<cms:text constant="footer_phone"/>
					</a>
				</div>

				<div id="form_container">
					<p><cms:text constant="form_title"/></p>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
						/>
				</div>
			</footer>

			<!-- Copyright -->
			<cms:template file="stock/copyright.xml">
				<param name="holder" value="copyright_holder"/>
				<param name="text" value="copyright_text"/>
				<param name="light" value=""/>
			</cms:template>
		</body>
	</html>
</document>
